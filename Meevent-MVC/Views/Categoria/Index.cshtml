@model IEnumerable<gRpc_Categorias.Categoria>

@{
    ViewData["Title"] = "Gestión de Categorías";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold">Gestión de Categorías</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-plus-circle me-2"></i> Nueva Categoría
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="input-group shadow-sm">
                <span class="input-group-text bg-dark border-secondary text-muted">
                    <i class="bi bi-search"></i>
                </span>
                <input type="number" name="buscarId" class="form-control bg-dark text-white border-secondary"
                       placeholder="Buscar por ID exacto..." value="@Context.Request.Query["buscarId"]" />
                <button class="btn btn-info px-4" type="submit">Buscar</button>

                @if (!string.IsNullOrEmpty(Context.Request.Query["buscarId"]))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary border-secondary text-white">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success bg-success text-white border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        </div>
    }

    <div class="card bg-dark border-secondary shadow">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0 text-white">
                <thead class="bg-black">
                    <tr class="border-bottom border-secondary text-uppercase small fw-bold">
                        <th class="ps-4" style="width: 10%">ID</th>
                        <th style="width: 30%">Nombre</th>
                        <th style="width: 25%">Slug (URL)</th>
                        <th style="width: 15%">Estado</th>
                        <th class="text-center" style="width: 20%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom border-secondary">
                                <td class="ps-4 fw-bold text-info">#@item.IdCategoria</td>
                                <td>@item.NombreCategoria</td>
                                <td><code class="text-warning">/@item.SlugCategoria</code></td>
                                <td>
                                    @if (item.Estado)
                                    {
                                        <span class="badge bg-success text-white rounded-pill px-3">
                                            <i class="bi bi-check-circle-fill me-1"></i> ACTIVO
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-white rounded-pill px-3">
                                            <i class="bi bi-x-circle-fill me-1"></i> INACTIVO
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.IdCategoria"
                                       class="btn btn-sm btn-outline-warning px-4">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                No se encontraron registros con los criterios de búsqueda.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>