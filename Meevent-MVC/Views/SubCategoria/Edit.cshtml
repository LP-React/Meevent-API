@model gRpc_SubCategorias.Subcategoria
@{
    ViewData["Title"] = "Editar Subcategoría";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header bg-black border-secondary py-3">
                    <h4 class="mb-0 text-warning">
                        <i class="bi bi-pencil-square me-2"></i>Editar Subcategoría
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="id" value="@Model.IdSubcategoria" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre de Subcategoría</label>
                                <input type="text" name="nombreSubcategoria" value="@Model.NombreSubcategoria"
                                       class="form-control bg-dark text-white border-secondary" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Slug (URL)</label>
                                <input type="text" name="slugSubcategoria" value="@Model.SlugSubcategoria"
                                       class="form-control bg-dark text-white border-secondary" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Categoría Padre</label>
                            <select name="categoriaEventoId" class="form-select bg-dark text-white border-secondary" required>
                                <option value="">-- Seleccione una categoría --</option>
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat.IdCategoria" selected="@(cat.IdCategoria == Model.IdCategoria)">
                                        @cat.NombreCategoria
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top border-secondary">
                            <a asp-action="Index" class="btn btn-outline-light px-4">Cancelar</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold text-dark">
                                GUARDAR CAMBIOS
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>