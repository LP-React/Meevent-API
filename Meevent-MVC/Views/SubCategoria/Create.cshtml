@{
    ViewData["Title"] = "Crear Subcategoría";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header bg-black border-secondary">
                    <h4 class="mb-0 text-success">Registrar Subcategoría</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Nombre de Subcategoría</label>
                            <input type="text" name="nombreSubcategoria" class="form-control bg-secondary text-white border-0" required placeholder="Ej: Rock Alternativo" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Slug (URL)</label>
                            <input type="text" name="slugSubcategoria" class="form-control bg-secondary text-white border-0" required placeholder="rock-alternativo" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-info">Asociar a Categoría Padre</label>
                            <select name="categoriaEventoId" class="form-select bg-secondary text-white border-0" required>
                                <option value="">-- Seleccionar Padre --</option>
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat.IdCategoria">@cat.NombreCategoria</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-grow-1 fw-bold">Guardar Subcategoría</button>
                            <a asp-action="Index" class="btn btn-outline-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>