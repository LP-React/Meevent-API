<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meevent Dark</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .navbar {
            background-color: #1f1f1f !important;
            border-bottom: 1px solid #333 !important;
        }

        .nav-link {
            color: #ffffff !important;
        }

        .card {
            background-color: #1f1f1f;
            color: white;
            border: 1px solid #333;
        }

        .form-control {
            background-color: #2b2b2b;
            border: 1px solid #444;
            color: white;
        }

            .form-control:focus {
                background-color: #333;
                color: white;
                border-color: #198754;
            }

        .dropdown-menu {
            background-color: #1f1f1f;
            border: 1px solid #333;
        }

        .dropdown-item {
            color: white;
        }

            .dropdown-item:hover {
                background-color: #333;
                color: #198754;
            }

        .dropdown-divider {
            border-color: #444;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-success" asp-controller="Categoria" asp-action="Index">MEEVENT API</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="catDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid-fill me-1"></i> Categorías
                            </a>
                            <ul class="dropdown-menu shadow-lg" aria-labelledby="catDropdown">
                                <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Listado Activas</a></li>
                                <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Nueva Categoría</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-info" asp-controller="Categoria" asp-action="GestionEstado">
                                        <i class="bi bi-gear-wide-connected me-2"></i>Activar/Desactivar ID
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="subCatDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-tags-fill me-1"></i> Subcategorías
                            </a>
                            <ul class="dropdown-menu shadow-lg" aria-labelledby="subCatDropdown">
                                <li><a class="dropdown-item" asp-controller="SubCategoria" asp-action="Index"><i class="bi bi-list-stars me-2"></i>Listado Activas</a></li>
                                <li><a class="dropdown-item" asp-controller="SubCategoria" asp-action="Create"><i class="bi bi-plus-square me-2"></i>Nueva Subcategoría</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-warning" asp-controller="SubCategoria" asp-action="GestionEstado">
                                        <i class="bi bi-shield-lock me-2"></i>Gestionar Estados
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-@TempData["Tipo"] border-0 shadow-sm mb-4 animate__animated animate__fadeIn">
                    <i class="bi bi-info-circle-fill me-2"></i> @TempData["Mensaje"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success bg-success text-white border-0 shadow-sm mb-4 animate__animated animate__fadeIn">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>