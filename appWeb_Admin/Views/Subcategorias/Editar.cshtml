@model appWeb_Admin.Models.SubcategoriaModel

@{
    ViewData["Title"] = "Editar Subcategoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Modificar Subcategoría</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="IdSubcategoriaEvento" />

                        <div class="mb-3">
                            <label class="form-label">Nombre de la Subcategoría</label>
                            <input asp-for="NombreSubcategoria" class="form-control" />
                            <span asp-validation-for="NombreSubcategoria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoría Padre</label>
                            <select asp-for="IdCategoriaEvento" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoriaEvento", "NombreCategoria"))">
                            </select>
                            <span asp-validation-for="IdCategoriaEvento" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Actualizar Cambios</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
                @if (ViewBag.MensajeError != null)
                {
                    <div class="card-footer">
                        <div class="alert alert-danger mb-0">@ViewBag.MensajeError</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>