@model appWeb_Admin.Models.UsuarioDetalleModel

@{
    ViewData["Title"] = "Detalle de Usuario";
}

<div class="container py-4">

    <div class="page-header-modern mb-5">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="header-icon-wrapper">
                        <div class="header-icon">
                            <i class="bi bi-person-badge-fill"></i>
                        </div>
                        <div class="icon-glow"></div>
                    </div>
                    <div>
                        <h2 class="header-title mb-1">Perfil de Usuario</h2>
                        <p class="header-subtitle mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            Expediente completo del usuario #@Model.IdUsuario
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn-modern btn-modern-reset text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="filter-card h-100">
                <div class="filter-header">
                    <i class="bi bi-person-lines-fill me-2 text-primary"></i> Información General
                </div>
                <div class="filter-body">
                    <div class="row gy-4">
                        <div class="col-sm-6">
                            <label class="form-label-modern small">Nombre Completo</label>
                            <div class="category-name fs-5 fw-bold">@Model.NombreCompleto</div>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <label class="form-label-modern small d-block">ID de Sistema</label>
                            <div class="id-badge">
                                <span class="id-hash">#</span><span class="id-number">@Model.IdUsuario</span>
                            </div>
                        </div>

                        <div class="col-12">
                            <hr class="text-muted opacity-25" />
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label-modern small"><i class="bi bi-envelope me-1 text-primary"></i> Correo</label>
                            <div class="text-dark fw-medium">@Model.CorreoElectronico</div>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label-modern small"><i class="bi bi-telephone me-1 text-primary"></i> Teléfono</label>
                            <div class="text-dark fw-medium">@(!string.IsNullOrWhiteSpace(Model.NumeroTelefono) ? Model.NumeroTelefono : "—")</div>
                        </div>

                        <div class="col-sm-4">
                            <label class="form-label-modern small">Estado de Cuenta</label>
                            <div>
                                <span class="status-badge @(Model.CuentaActiva ? "status-active" : "status-inactive")">
                                    <span class="status-dot"></span>
                                    @(Model.CuentaActiva ? "Activo" : "Inactivo")
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label class="form-label-modern small">Email Verificado</label>
                            <div>
                                @if (Model.EmailVerificado)
                                {
                                    <span class="status-badge status-active"><i class="bi bi-check2-all me-1"></i> Verificado</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">Pendiente</span>
                                }
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label class="form-label-modern small">Tipo</label>
                            <div>
                                <span class="badge" style="background: rgba(102, 126, 234, 0.1); color: #667eea; padding: 8px 12px; border-radius: 8px; font-weight: 600;">
                                    @Model.TipoUsuario
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="row g-4">
                <div class="col-12">
                    <div class="filter-card">
                        <div class="filter-header">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i> Ubicación
                        </div>
                        <div class="filter-body">
                            <div class="d-flex align-items-center gap-3">
                                <div class="category-icon-mini" style="background: rgba(239, 68, 68, 0.1); color: #ef4444;">
                                    <i class="bi bi-globe-americas"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark fs-6">@Model.Ciudad, @Model.Pais</div>
                                    <div class="small text-muted">Ubicación registrada de residencia</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.PerfilOrganizador != null)
                {
                    <div class="col-12">
                        <div class="filter-card" style="border-left: 4px solid #f59e0b;">
                            <div class="filter-header" style="background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%); color: #92400e;">
                                <i class="bi bi-briefcase-fill me-2"></i> Perfil de Organizador
                            </div>
                            <div class="filter-body">
                                <dl class="mb-0">
                                    <dt class="form-label-modern small opacity-75">Nombre de la Empresa</dt>
                                    <dd class="fw-bold mb-3 text-dark fs-6">@Model.PerfilOrganizador.NombreOrganizador</dd>

                                    <dt class="form-label-modern small opacity-75">Teléfono de Contacto</dt>
                                    <dd class="mb-3 text-dark fw-medium">@Model.PerfilOrganizador.TelefonoContacto</dd>

                                    <dt class="form-label-modern small opacity-75">Sitio Web Oficial</dt>
                                    <dd class="mb-0">
                                        @if (!string.IsNullOrEmpty(Model.PerfilOrganizador.SitioWeb))
                                        {
                                            <a href="@Model.PerfilOrganizador.SitioWeb" target="_blank" class="text-primary text-decoration-none fw-600">
                                                <i class="bi bi-link-45deg"></i> @Model.PerfilOrganizador.SitioWeb
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * { font-family: 'Inter', sans-serif; }

    /* ============ HEADER ============ */
    .page-header-modern { animation: fadeInDown 0.6s ease; }
    .header-icon-wrapper { position: relative; margin-right: 20px; }
    .header-icon {
        width: 70px; height: 70px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px; display: flex; align-items: center; justify-content: center;
        font-size: 2rem; color: white; position: relative; z-index: 2;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        animation: floatIcon 3s ease-in-out infinite;
    }
    .icon-glow {
        position: absolute; inset: -10px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 25px; filter: blur(20px); opacity: 0.5; z-index: 1;
    }
    .header-title {
        font-size: 2rem; font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }

    /* ============ CARDS ============ */
    .filter-card {
        background: white; border-radius: 20px;
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: 0 8px 30px rgba(0,0,0,0.04);
        overflow: hidden; transition: transform 0.3s ease;
        animation: fadeInUp 0.6s ease both;
    }
    .filter-header {
        background: #f8fafc; padding: 18px 25px;
        font-weight: 700; border-bottom: 1px solid #f1f5f9;
    }
    .filter-body { padding: 25px; }

    /* ============ ELEMENTOS ============ */
    .form-label-modern {
        font-size: 0.75rem; font-weight: 700; color: #94a3b8;
        text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;
    }
    .category-name { color: #1e293b; letter-spacing: -0.5px; }
    .id-badge {
        background: #f1f5f9; padding: 6px 12px; border-radius: 10px; font-weight: 700;
    }
    .id-hash { color: #94a3b8; }
    .category-icon-mini {
        width: 48px; height: 48px; border-radius: 14px;
        display: flex; align-items: center; justify-content: center; font-size: 1.25rem;
    }

    /* ============ BADGES ============ */
    .status-badge {
        display: inline-flex; align-items: center; gap: 8px;
        padding: 6px 14px; border-radius: 12px; font-weight: 600; font-size: 0.85rem;
    }
    .status-active { background: #ecfdf5; color: #059669; }
    .status-inactive { background: #fef2f2; color: #dc2626; }
    .status-dot {
        width: 8px; height: 8px; border-radius: 50%;
        background: currentColor; animation: pulse 2s infinite;
    }

    /* ============ BOTONES ============ */
    .btn-modern-reset {
        background: #f1f5f9; color: #475569; padding: 10px 20px;
        border-radius: 12px; font-weight: 600; border: none; transition: 0.3s;
    }
    .btn-modern-reset:hover { background: #e2e8f0; color: #1e293b; transform: translateY(-2px); }

    /* ============ ANIMACIONES ============ */
    @@keyframes fadeInDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }
    @@keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    @@keyframes floatIcon { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-8px); } }
    @@keyframes pulse { 0% { box-shadow: 0 0 0 0 rgba(0,0,0,0.2); } 70% { box-shadow: 0 0 0 6px rgba(0,0,0,0); } 100% { box-shadow: 0 0 0 0 rgba(0,0,0,0); } }
</style>