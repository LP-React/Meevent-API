@model CategoriaEventoModel

<h3>Editar Categoría</h3>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdCategoriaEvento" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="NombreCategoria" class="form-control" />
        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Guardar cambios
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Cancelar
    </a>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewBag.MensajeError
        </div>
    }
</form>

@if (ViewBag.MensajeOk != null)
{
    <div class="alert alert-success">
        @ViewBag.MensajeOk
    </div>
}
