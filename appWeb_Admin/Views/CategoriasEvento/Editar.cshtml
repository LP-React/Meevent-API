@model appWeb_Admin.Models.CategoriaEventoModel

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container py-4">

    <div class="mb-4">
        <h4 class="fw-semibold mb-0">Editar categoría</h4>
        <small class="text-muted">Actualización de datos básicos</small>
    </div>

    <!-- MENSAJES -->
    @if (ViewBag.MensajeOk != null)
    {
        <div class="alert alert-success">
            @ViewBag.MensajeOk
        </div>
    }

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger">
            @ViewBag.MensajeError
        </div>
    }

    <!-- FORM -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <form asp-action="Editar" method="post">

                <!-- ID oculto -->
                <input type="hidden" asp-for="IdCategoriaEvento" />

                <div class="mb-3">
                    <label asp-for="NombreCategoria" class="form-label fw-semibold">
                        Nombre de la categoría
                    </label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Estado</label>
                    <div>
                        <span class="badge @(Model.EstaActivo ? "bg-success" : "bg-secondary")">
                            @(Model.EstaActivo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        Guardar cambios
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Volver
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
