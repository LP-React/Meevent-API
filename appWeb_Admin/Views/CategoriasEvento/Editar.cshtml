@model appWeb_Admin.Models.CategoriaEventoModel
@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container py-4">

    <!-- HEADER PRINCIPAL CON DEGRADADO -->
    <div class="page-header-modern mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="header-icon-wrapper">
                        <div class="header-icon">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <div class="icon-glow"></div>
                    </div>
                    <div>
                        <h2 class="header-title mb-1">Editar Categoría</h2>
                        <p class="header-subtitle mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            Actualización de datos básicos
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn-modern btn-modern-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Volver al listado
                </a>
            </div>
        </div>
    </div>

    <!-- MENSAJES -->
    @if (ViewBag.MensajeOk != null)
    {
        <div class="alert-modern alert-modern-success">
            <div class="alert-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="alert-content">
                <strong>¡Éxito!</strong>
                <p>@ViewBag.MensajeOk</p>
            </div>
        </div>
    }
    @if (ViewBag.MensajeError != null)
    {
        <div class="alert-modern alert-modern-error">
            <div class="alert-icon">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <div class="alert-content">
                <strong>Error</strong>
                <p>@ViewBag.MensajeError</p>
            </div>
        </div>
    }

    <!-- FORM CON DISEÑO GLASSMORPHISM -->
    <div class="form-card">
        <div class="form-card-body">
            <form asp-action="Editar" method="post">

                <!-- ID oculto -->
                <input type="hidden" asp-for="IdCategoriaEvento" />

                <!-- Nombre de Categoría -->
                <div class="form-group-modern mb-4">
                    <label asp-for="NombreCategoria" class="form-label-modern">
                        <i class="bi bi-tag-fill label-icon"></i>
                        Nombre de la Categoría
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon">
                            <i class="bi bi-pencil"></i>
                        </div>
                        <input asp-for="NombreCategoria"
                               class="form-control-modern"
                               placeholder="Ingrese el nombre de la categoría" />
                        <div class="input-border"></div>
                    </div>
                    <span asp-validation-for="NombreCategoria" class="validation-message">
                    </span>
                </div>

                <!-- Estado -->
                <div class="form-group-modern mb-4">
                    <label class="form-label-modern">
                        <i class="bi bi-toggle-on label-icon"></i>
                        Estado Actual
                    </label>
                    <div class="status-display">
                        <span class="status-badge-large @(Model.EstaActivo ? "status-active" : "status-inactive")">
                            <span class="status-dot-large"></span>
                            <span class="status-text">@(Model.EstaActivo ? "Activo" : "Inactivo")</span>
                        </span>
                        <small class="text-muted ms-3">
                            <i class="bi bi-info-circle me-1"></i>
                            El estado se puede cambiar desde el listado principal
                        </small>
                    </div>
                </div>

                <!-- Información adicional -->
                <div class="info-box mb-4">
                    <div class="info-box-icon">
                        <i class="bi bi-lightbulb"></i>
                    </div>
                    <div class="info-box-content">
                        <strong>Información importante</strong>
                        <p class="mb-0">Los cambios realizados afectarán a todas las subcategorías y eventos asociados a esta categoría.</p>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="form-actions">
                    <button type="submit" class="btn-modern btn-modern-primary">
                        <span class="btn-icon">
                            <i class="bi bi-check-circle"></i>
                        </span>
                        <span class="btn-text">Guardar Cambios</span>
                        <span class="btn-shine"></span>
                    </button>
                    <a asp-action="Index" class="btn-modern btn-modern-outline">
                        <i class="bi bi-x-circle me-2"></i>
                        Cancelar
                    </a>
                </div>

            </form>
        </div>
    </div>

</div>

<style>
    /* Importar fuente moderna */
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    /* ============ HEADER MODERNO ============ */
    .page-header-modern {
        animation: fadeInDown 0.6s ease;
    }

    .header-icon-wrapper {
        position: relative;
        margin-right: 20px;
    }

    .header-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        position: relative;
        z-index: 2;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        animation: floatIcon 3s ease-in-out infinite;
    }

    .icon-glow {
        position: absolute;
        inset: -10px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 25px;
        filter: blur(20px);
        opacity: 0.5;
        z-index: 1;
    }

    .header-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
    }

    .header-subtitle {
        color: #64748b;
        font-size: 0.95rem;
        font-weight: 500;
    }

    /* ============ BOTONES MODERNOS ============ */
    .btn-modern {
        position: relative;
        padding: 12px 28px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        border: none;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-modern-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-modern-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
            color: white;
        }

    .btn-modern-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-modern-secondary:hover {
            background: #e2e8f0;
            transform: translateY(-2px);
            color: #475569;
        }

    .btn-modern-outline {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
    }

        .btn-modern-outline:hover {
            border-color: #cbd5e1;
            background: #f8fafc;
            transform: translateY(-2px);
            color: #475569;
        }

    .btn-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.5s;
    }

    .btn-modern:hover .btn-shine {
        left: 100%;
    }

    /* ============ ALERTAS MODERNAS ============ */
    .alert-modern {
        display: flex;
        align-items: start;
        gap: 16px;
        padding: 20px 24px;
        border-radius: 16px;
        margin-bottom: 24px;
        animation: fadeInDown 0.5s ease;
        border: 2px solid;
    }

    .alert-modern-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
        border-color: rgba(16, 185, 129, 0.3);
    }

    .alert-modern-error {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.1) 100%);
        border-color: rgba(239, 68, 68, 0.3);
    }

    .alert-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .alert-modern-success .alert-icon {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

    .alert-modern-error .alert-icon {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .alert-content {
        flex: 1;
    }

        .alert-content strong {
            display: block;
            font-size: 1.1rem;
            margin-bottom: 4px;
            color: #1e293b;
        }

        .alert-content p {
            margin: 0;
            color: #64748b;
            font-size: 0.95rem;
        }

    /* ============ TARJETA DE FORMULARIO ============ */
    .form-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        animation: fadeInUp 0.6s ease 0.1s both;
    }

    .form-card-body {
        padding: 40px;
    }

    /* ============ GRUPOS DE FORMULARIO ============ */
    .form-group-modern {
        position: relative;
    }

    .form-label-modern {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        font-weight: 600;
        color: #475569;
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .label-icon {
        color: #667eea;
        margin-right: 8px;
        font-size: 1.1rem;
    }

    /* ============ INPUT MODERNO ============ */
    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 1.1rem;
        z-index: 2;
    }

    .form-control-modern {
        width: 100%;
        padding: 16px 18px 16px 52px;
        border: 2px solid #e2e8f0;
        border-radius: 14px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
        color: #1e293b;
        font-weight: 500;
    }

        .form-control-modern:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-1px);
        }

            .form-control-modern:focus ~ .input-icon {
                color: #667eea;
            }

    .input-border {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        transition: width 0.3s ease;
        border-radius: 0 0 14px 14px;
    }

    .form-control-modern:focus ~ .input-border {
        width: 100%;
    }

    /* ============ MENSAJE DE VALIDACIÓN ============ */
    .validation-message {
        display: inline-flex;
        align-items: center;
        color: #ef4444;
        font-size: 0.85rem;
        font-weight: 500;
        margin-top: 8px;
    }

    /* ============ DISPLAY DE ESTADO ============ */
    .status-display {
        display: flex;
        align-items: center;
        padding: 16px 20px;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 14px;
        border: 2px solid #e2e8f0;
    }

    .status-badge-large {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 0.3px;
    }

    .status-active {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);
        color: #059669;
        border: 2px solid rgba(16, 185, 129, 0.3);
    }

    .status-inactive {
        background: linear-gradient(135deg, rgba(100, 116, 139, 0.15) 0%, rgba(71, 85, 105, 0.15) 100%);
        color: #475569;
        border: 2px solid rgba(100, 116, 139, 0.3);
    }

    .status-dot-large {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: currentColor;
        animation: pulse 2s ease-in-out infinite;
    }

    .status-text {
        font-size: 1.05rem;
    }

    /* ============ CAJA DE INFORMACIÓN ============ */
    .info-box {
        display: flex;
        align-items: start;
        gap: 16px;
        padding: 20px 24px;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(37, 99, 235, 0.08) 100%);
        border-left: 4px solid #3b82f6;
        border-radius: 12px;
    }

    .info-box-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .info-box-content {
        flex: 1;
    }

        .info-box-content strong {
            display: block;
            color: #1e293b;
            margin-bottom: 4px;
            font-size: 0.95rem;
        }

        .info-box-content p {
            color: #64748b;
            font-size: 0.9rem;
            line-height: 1.5;
        }

    /* ============ ACCIONES DE FORMULARIO ============ */
    .form-actions {
        display: flex;
        gap: 12px;
        padding-top: 24px;
        border-top: 2px solid #f1f5f9;
        margin-top: 32px;
    }

    /* ============ ANIMACIONES ============ */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes floatIcon {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.7;
            transform: scale(1.1);
        }
    }

    /* ============ RESPONSIVE ============ */
    @@media (max-width: 768px) {
        .header-title {
            font-size: 1.5rem;
        }

        .header-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .form-card-body {
            padding: 24px;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-modern {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}