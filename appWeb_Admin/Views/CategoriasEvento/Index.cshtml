@model IEnumerable<appWeb_Admin.Models.CategoriaEventoModel>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-semibold mb-0">Categorías de eventos</h4>

        <a asp-action="Crear" class="btn btn-primary">
            Crear Categoría
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Categoría</th>
                        <th style="width: 120px;">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No hay categorías registradas
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@item.IdCategoriaEvento</td>
                                <td class="fw-semibold">@item.NombreCategoria</td>
                                <td>
                                    <span class="badge @(item.EstaActivo ? "bg-success" : "bg-secondary")">
                                        @(item.EstaActivo ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
