@model IEnumerable<appWeb_Admin.Models.CategoriaEventoModel>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-semibold mb-0">Categorías de eventos</h4>
            <small class="text-muted">Administración de categorías</small>
        </div>

        <a asp-action="Crear" class="btn btn-primary">
            + Crear categoría
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 70px;">ID</th>
                        <th>Categoría</th>
                        <th style="width: 160px;" class="text-center">Estado</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No hay categorías registradas
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@item.IdCategoriaEvento</td>

                                <td class="fw-semibold">
                                    @item.NombreCategoria
                                </td>

                                <td class="text-center">
                                    <form asp-action="CambiarEstado"
                                          method="post"
                                          class="d-inline-flex flex-column align-items-center gap-1">

                                        <input type="hidden" name="id" value="@item.IdCategoriaEvento" />

                                        <div class="form-check form-switch">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   role="switch"
                                                   name="estado"
                                                   value="true"
                                                   @(item.EstaActivo ? "checked" : "")
                                                   onchange="this.form.submit()" />
                                        </div>

                                        <span class="badge @(item.EstaActivo ? "bg-success" : "bg-secondary")">
                                            @(item.EstaActivo ? "Activo" : "Inactivo")
                                        </span>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
