@model CategoriaEventoModel

@{
    ViewData["Title"] = "Crear categoría";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <h4 class="mb-4 fw-semibold text-center">
                        Crear categoría de evento
                    </h4>

                    <form asp-action="Crear" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="NombreCategoria" class="form-label fw-semibold"></label>
                            <input asp-for="NombreCategoria"
                                   class="form-control"
                                   placeholder="Ej: Conferencia, Taller, Meetup" />
                            <span asp-validation-for="NombreCategoria" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancelar
                            </a>

                            <button type="submit" class="btn btn-primary px-4">
                                Guardar
                            </button>
                        </div>
                    </form>

                </div>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-info mt-3 mb-0">
                    @ViewBag.Mensaje
                </div>
            }

        </div>
    </div>
</div>
